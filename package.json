{
  "name": "vite-react-ts",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "unset:git-hooks-path": "git config --unset core.hooksPath",
    "simple-git-hooks": "npx simple-git-hooks",
    "postinstall": "is-ci || npm run simple-git-hooks",
    "prettify": "prettier --write .",
    "lint": "eslint --cache --fix ./src",
    "ts-check": "tsc --noEmit",
    "check": "run-s prettify lint ts-check",
    "start": "vite",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "ci": "cross-env NODE_ENV=production run-s build",
    "predeploy:gh-pages": "touch dist/.nojekyll",
    "deploy:gh-pages": "gh-pages -d dist --dotfiles",
    "deploy": "run-s ci deploy:gh-pages"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-helmet-async": "1.3.0"
  },
  "devDependencies": {
    "@types/node": "18.11.18",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@typescript-eslint/eslint-plugin": "5.49.0",
    "@typescript-eslint/parser": "5.49.0",
    "@vitejs/plugin-react": "3.0.0",
    "autoprefixer": "10.4.13",
    "cross-env": "7.0.3",
    "cssnano": "5.1.14",
    "eslint": "8.32.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "gh-pages": "5.0.0",
    "is-ci": "3.0.1",
    "lint-staged": "13.1.0",
    "npm-run-all2": "6.0.4",
    "postcss": "8.4.21",
    "postcss-import": "15.1.0",
    "postcss-nesting": "11.0.0",
    "prettier": "2.8.4",
    "prettier-plugin-tailwindcss": "0.2.1",
    "simple-git-hooks": "2.8.1",
    "tailwindcss": "3.2.4",
    "typescript": "4.9.3",
    "vite": "4.0.0",
    "vite-tsconfig-paths": "4.0.5"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,md,html,css,scss}": "prettier --write",
    "src/**/*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
